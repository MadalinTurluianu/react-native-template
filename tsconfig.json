{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES7", "ES2022"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@helpers/*": ["helpers/*"],
      "@apis/*": ["apis/*"],
      "@constants/*": ["constants/*"],
      "@styles/*": ["styles/*"],
      "@store/*": ["store/*"],
      "@types/*": ["types/*"],
      "@views/*": ["views/*"],
      "@hooks/*": ["hooks/*"],
      "@models/*": ["models/*"],
      "@features/*": ["features/*"],
    }
  },
  "exclude": ["__tests__/**/*-test.ts"],
  "extends": "expo/tsconfig.base"
}
